<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BCE8FB">

        <TextView
            android:id="@+id/num_one_txtv"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="150dp"
            android:text="@string/number_1"></TextView>

        <TextView
            android:id="@+id/num_two_txtv_a1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="200dp"
            android:text="@string/number_2">

        </TextView>

        <EditText
            android:id="@+id/num_one_a1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="130dp"
            android:inputType="number"></EditText>

        <EditText
            android:id="@+id/num_two_a1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="180dp"
            android:inputType="number"></EditText>


        <Button
            android:id="@+id/button_a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270dp"
            android:text="@string/button_act_one">




        </Button>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>